# Django Configuration
# SECRET_KEY: Required in production. If not set, uses insecure dev key (with warning).
# Generate a secure key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG_MODE: Set to "false" in production
DEBUG_MODE=true

# Hosts & CSRF
# ALLOWED_HOSTS: Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,adams.org.in,www.adams.org.in,13.126.176.168

# CSRF_TRUSTED_ORIGINS: Comma-separated list of trusted origins (include https:// in production)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://adams.org.in,https://www.adams.org.in

# Database Configuration
# USE_SQLITE: Set to "true" for SQLite (default, no setup required) or "false" for PostgreSQL
USE_SQLITE=true

# PostgreSQL Database (Required only if USE_SQLITE=false)
# DB_NAME=adamsdb
# DB_USER=postgres
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# MinIO Configuration (S3-compatible object storage)
# Optional for basic operations (migrate, runserver). Required for file uploads.
# Defaults provided for development, but should be set in production.
MINIO_URL=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=adams

# Email Configuration
# EMAIL_BACKEND: Defaults to console backend (prints to console) for development
# Set to "django.core.mail.backends.smtp.EmailBackend" for production
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
